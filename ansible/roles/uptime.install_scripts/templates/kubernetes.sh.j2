#!/bin/bash

### Terraform Flavour install


set -eux

## Install and configure git
sudo apt-get update
sudo apt install -y git unzip
git config --global user.name stagiaire
git config --global user.email stagiaire@email.example

# Terraform
cd /tmp
wget https://releases.hashicorp.com/terraform/1.3.9/terraform_1.3.9_linux_amd64.zip -O /tmp/terraform.zip
unzip /tmp/terraform.zip
sudo mv /tmp/terraform /usr/local/bin/terraform
sudo chmod 550 /usr/local/bin/terraform

# Terragrunt
sudo cd /root
sudo wget https://github.com/gruntwork-io/terragrunt/releases/download/v0.44.1/terragrunt_linux_amd64 -O /usr/local/bin/terragrunt
sudo chmod +x /usr/local/bin/terragrunt

# Learning project
cd /opt
sudo git clone https://github.com/uptime-formation/terraform-project /opt/projet
sudo chown -R 1000:1000 /opt/projet